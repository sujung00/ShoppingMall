<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shoppingmall.user.dao.UserMapper">

	<select id="selectUserListById" resultType="com.shoppingmall.user.model.User">
		SELECT
			*
		FROM
			`user`
		WHERE
			`id` = #{id}
	</select>
	
	<select id="selectUserByLoginId" parameterType="String" resultType="com.shoppingmall.user.model.User">
		SELECT
			`id`
			,`loginId`
			,`password`
			,`name`
			,`email`
			,`phoneNumber`
			,`createdAt`
			,`updatedAt`
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
	</select>
	
	<insert id="insertUser" parameterType="map">
		INSERT INTO `user`
		(
			`loginId`
			,`password`
			,`name`
			,`email`
			,`phoneNumber`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{loginId}
			, #{password}
			, #{name}
			, #{email}
			, #{phoneNumber}
			, NOW()
			, NOW()
		)
	</insert>
	
	<select id="selectUserByLoginIdPassword" parameterType="map" resultType="com.shoppingmall.user.model.User">
		SELECT
			`id`
			,`loginId`
			,`password`
			,`name`
			,`email`
			,`phoneNumber`
			,`createdAt`
			,`updatedAt`
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
			AND
			`password` = #{password}
	</select>

</mapper>